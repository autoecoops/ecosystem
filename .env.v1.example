# ============================================================================
# AutoEcoOps Ecosystem v1.0 - Environment Variables Template
# Copy to .env.local and fill in actual values
# ============================================================================

# General
NODE_ENV=development
LOG_LEVEL=debug

# ============================================================================
# Auth Service (core/auth-service)
# ============================================================================
OIDC_ISSUER_URL=http://localhost:8080/realms/autoecops
OIDC_CLIENT_ID=autoecops-api
OIDC_CLIENT_SECRET=change-me
JWT_SECRET=dev-jwt-secret-change-in-production

# ============================================================================
# Database (core/memory-hub, core/policy-audit)
# ============================================================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/autoecops
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_SSL=false

# ============================================================================
# Redis (core/event-bus, core/auth-service)
# ============================================================================
REDIS_URL=redis://localhost:6379

# ============================================================================
# Memory Hub (core/memory-hub)
# ============================================================================
EMBEDDING_MODEL_URL=http://localhost:11434/api/embeddings
EMBEDDING_MODEL_NAME=nomic-embed-text
EMBEDDING_DIMENSIONS=768
EMBEDDING_MODEL_VERSION=nomic-embed-text-v1.5

# ============================================================================
# Infra Manager (core/infra-manager)
# ============================================================================
ARGOCD_SERVER_URL=https://localhost:8443
ARGOCD_AUTH_TOKEN=change-me

# ============================================================================
# Platform-02 IAOps
# ============================================================================
SBOM_REQUIRED=true
SIGNATURE_REQUIRED=true

# ============================================================================
# Platform-03 MachineNativeOps
# ============================================================================
EDGE_AGENT_TIMEOUT_MS=300000
EDGE_HEARTBEAT_INTERVAL_MS=30000

# ============================================================================
# Observability (OpenTelemetry)
# ============================================================================
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318

# ============================================================================
# Service URLs (inter-service communication)
# ============================================================================
AUTH_SERVICE_URL=http://localhost:4001
MEMORY_HUB_URL=http://localhost:4002
EVENT_BUS_URL=http://localhost:4003
POLICY_AUDIT_URL=http://localhost:4004
INFRA_MANAGER_URL=http://localhost:4005

# ============================================================================
# CORS
# ============================================================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
